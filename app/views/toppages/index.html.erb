<% if logged_in? %>
    <%= render 'layouts/error_messages', model: @book %>
        <div class="center jumbotron">
            <h3 class="text-center">
                新しい本を投稿する
            </h3>
            <div class="text-center">
                <%= link_to '投稿', new_book_path, class: 'btn btn-lg btn-primary' %>
            </div>
        </div>
    
        <h4 class="mb-3 text-center bg-info">
            タイムライン
        </h4>
        <%= render 'books/books', books: @books %>
<% else %>
    <div class="jumbotron jumbotron-fluid text-white" style="background: url(<%= asset_path "bookshelf.jpg" %>) center; background-size:cover;">
        <h3>おすすめの本を紹介してみよう</h3>
    </div>
    <div class="center jumbotron">
        <div class="text-center">
            <h3>会員登録はこちらから</h3>
            <%= link_to '会員登録', signup_path, class: 'btn btn-lg btn-primary' %>
        </div>
    </div>
    
<% end %>
    

