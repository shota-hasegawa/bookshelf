<% if current_user.favorite?(book) %>
    <%= form_with(model: current_user.favorites.find_by(book_id: book.id), local: true, method: :delete) do |f| %>
        <%= hidden_field_tag :book_id, book.id %>
        <%= f.submit 'お気に入りを外す', class: 'btn btn-secondary btn-sm' %>
    <% end %>
<% else %>
    <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
        <%= hidden_field_tag :book_id, book.id %>
        <%= f.submit 'お気に入り', class: 'btn btn-warning btn-sm' %>
    <% end %>
<% end %>