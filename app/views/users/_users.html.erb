<% if users.any? %>
    <ul class="list-unstyled">
        <% users.each do |user| %>
            <li class="media">
                <%= image_tag @user.image.url if @user.image?, size: '50x50' %>
                <div class="media-body">
                    <div>
                        <%= user.name %>
                    </div>
                    <div>
                        <p><%= link_to 'プロフィール', user_path(user) %></p>
                    </div>
                </div>
            </li>
        <% end %>
    </ul>
    <%= paginate users %>
<% end %>