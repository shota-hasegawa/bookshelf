<% if users.any? %>
    <ul class="list-unstyled">
        <% users.each do |user| %>
            <li class="media mb-3">
                <%= image_tag user.image.url, width: '25%' %>
                <div class="media-body ml-3">
                    <h5>
                        <%= user.name %>
                    </h5>
                    <h5 class="mt-3">
                        <p><%= link_to 'プロフィール', user_path(user) %></p>
                    </h5>
                </div>
            </li>
        <% end %>
    </ul>
    <%= paginate users %>
<% end %>